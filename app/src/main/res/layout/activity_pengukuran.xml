<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    tools:context="com.example.afip.cobalist.PengukuranActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#DDB35F"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginLeft="93dp"
            android:layout_marginTop="7dp"
            android:src="@drawable/icon"
            android:id="@+id/imageView4" />
        <TextView
            android:text="CENGGO"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:textSize="32dp"
            android:fontFamily="casual"
            android:id="@+id/textView10" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:background="#DDB35F"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/linearLayout">
        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:background="#EFC878"
            android:id="@+id/buttonhome">
            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/home3"
                android:id="@+id/imageView1" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:background="#EFC880"
            android:id="@+id/buttonukur">
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@android:drawable/ic_notification_overlay"
                android:layout_below="@+id/textView4"
                android:layout_toRightOf="@+id/linearLayout2"
                android:layout_toEndOf="@+id/linearLayout2"
                android:id="@+id/imageView2" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:background="#EFC878"
            android:id="@+id/buttonhistory">
            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/history"
                android:id="@+id/imageView3" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="65dp"
        android:layout_marginBottom="65dp"
        android:background="#F9EDAA"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="20dp"
            android:background="#A9EDAA"
            >
            <TextView
                android:text="Tingkat Kelas Pencemaran Air"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="4dp"
                android:textSize="20dp"
                android:id="@+id/textView6" />
            <TextView
                android:text="III"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="74dp"
                android:layout_marginLeft="54dp"
                android:textSize="65dp"
                android:id="@+id/textView9" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="20dp"
            android:background="#A9EDAA"
            >
            <TextView
                android:text="Probabilitas Tumbuhnya Eceng Gondok"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:textAlignment="center"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="4dp"
                android:textSize="18dp"
                android:id="@+id/textView7" />
            <TextView
                android:text="76%"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_marginTop="77dp"
                android:layout_marginLeft="28dp"
                android:textSize="55dp"
                android:id="@+id/textView8" />
        </RelativeLayout>

        <TextView
            android:text="Sungai Wonorejo"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_marginTop="190dp"
            android:layout_marginLeft="110dp"
            android:textSize="20dp"
            android:id="@+id/textView1" />

        <TextView
            android:text="27 Maret 2017"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_marginTop="210dp"
            android:layout_marginLeft="120dp"
            android:textSize="20dp"
            android:id="@+id/textView2" />

        <TextView
            android:text="Nilai pH :"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:layout_marginTop="240dp"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:id="@+id/textView3" />
        <TextView
            android:text="Nilai Suhu :"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:layout_marginTop="270dp"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:id="@+id/textView4" />
        <TextView
            android:text="Nilai EC :"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:id="@+id/textView5" />




    </RelativeLayout>


</RelativeLayout>

